<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.view.main.fragments.dataScreen.DataFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lbl_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date: " />

        <TextView
            android:id="@+id/val_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lbl_maxTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="max temperature: " />

        <TextView
            android:id="@+id/val_maxTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lbl_minTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="min temperature: " />

        <TextView
            android:id="@+id/val_minTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lbl_maxBPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="max bpm: " />

        <TextView
            android:id="@+id/val_maxBPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lbl_minBPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="min bpm: " />

        <TextView
            android:id="@+id/val_minBPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value" />

    </LinearLayout>

</LinearLayout>