<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".ui.view.main.fragments.dataScreen.DataFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="30sp"
                android:layout_height="30sp"
                app:cardBackgroundColor="@color/backgroundCold"
                app:cardCornerRadius="30sp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:src="@drawable/ico_arrow_left"
                    app:tint="@color/textCold"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/lbl_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textSize="18sp"
                android:layout_marginHorizontal="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="30sp"
                android:layout_height="30sp"
                app:cardBackgroundColor="@color/backgroundCold"
                app:cardCornerRadius="30sp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:src="@drawable/ico_arrow_right"
                    app:tint="@color/textRegular"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/backgroundGraph"
            app:cardCornerRadius="50dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:layout_marginVertical="5sp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/text"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="50dp"
                android:backgroundTint="@color/backgroundWarm"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/lbl_maxTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginVertical="2dp"
                    android:layout_marginHorizontal="15dp"
                    android:textColor="@color/textWarm"
                    android:text="Peak Temperature" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/val_maxTemp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="30.97" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/backgroundCold"
                app:cardElevation="0dp"
                app:cardCornerRadius="50dp">

                <TextView
                    android:id="@+id/lbl_minTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginVertical="2dp"
                    android:layout_marginHorizontal="15dp"
                    android:textColor="@color/textCold"
                    android:text="Min Temperature" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/val_minTemp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="23.65" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/backgroundLight"
            app:cardElevation="0dp"
            app:cardCornerRadius="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="25dp"
                android:textColor="@color/text"
                android:text="Throughout the day, your pet has experienced high temperatures reaching above 29.4 degree celsius, which may have caused may cause dehydration and exhaustion." />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/backgroundGraph"
            app:cardCornerRadius="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heartbeat"
                android:layout_marginVertical="5sp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/text"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="50dp"
                android:backgroundTint="@color/backgroundWarm"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/lbl_maxBPM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginVertical="2dp"
                    android:layout_marginHorizontal="15dp"
                    android:textColor="@color/textWarm"
                    android:text="Peak BPM" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/val_maxBPM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="131" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="50dp"
                android:backgroundTint="@color/backgroundCold"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/lbl_minBPM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginVertical="2dp"
                    android:layout_marginHorizontal="15dp"
                    android:textColor="@color/textCold"
                    android:text="Min BPM" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/val_minBPM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="73" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/backgroundLight"
            app:cardElevation="0dp"
            app:cardCornerRadius="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="25dp"
                android:textColor="@color/text"
                android:text="Throughout the day, your pet has experienced a low bpm reading going below 90, which may be of concern.\n\nThere are many possible reasons for a low heart rate including a problem with the heart or blood pressure, extreme cold, hormone problems, and/or drugs and toxins" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>